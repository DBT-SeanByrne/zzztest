{
	"version": "2",
	"templates": [
		{
			"type": 1,
			"title": "MineCraft Vanilla",
			"name": "MineCraft Vanilla",
			"note": "MineCraft Vanilla",
			"description": "MineCraft Vanilla",
			"platform": "linux",
			"image": "itzg/minecraft-server",
			"env": [
				{
					"name": "PUID",
					"label": "PUID",
					"default": "1024",
					"description": "for GroupID"
				},
                {
					"name": "SERVER_NAME",
					"label": "Server Name",
					"default": "MineCraft Vanilla",
					"description": "Name of the Server"
				},
				{
					"name": "PGID",
					"label": "PGID",
					"default": "100",
					"description": "for UserID"
				},
				{
					"name": "EULA",
					"label": "EULA",
					"default": "TRUE",
					"description": "Accepts MineCraft EULA"
				},
                {
					"name": "TYPE",
					"label": "TYPE",
					"default": "Vanilla",
					"description": "Server Type"
				},
                {
                    "name": "GAME MODE",
                    "label": "MODE",
                    "select": [
                        {
                            "text": "creative",
                            "value": "creative",
                            "defaullt": "TRUE"
                        },
                        {
                            "text": "survival",
                            "value": "survival",
                        },
                        {
                            "text": "adventure",
                            "value": "adventure",
                        },
                    ],
					"description": "Select Game Mode"
				},
                {
                    "name": "DIFFICULTY",
                    "label": "Game Difficulty",
                    "select": [
                        {
                            "text": "peaceful",
                            "value": "peaceful",
                            "defaullt": "TRUE"
                        },
                        {
                            "text": "easy",
                            "value": "easy",
                        },
                        {
                            "text": "normal",
                            "value": "normal",
                        },
                        {
                            "text": "hard",
                            "value": "hard",
                        },
                         ],
					"description": "Select Game Mode"
				},
                {
                     "name": "SPAWN_ANIMALS",
                     "label": "SPAWN_ANIMALS",
                     "select": [
                         {
                            "text": "TRUE",
                                    "value": "TRUE",
                                    "defaullt": "TRUE"
                                },
                                {
                                    "text": "FALSE",
                                    "value": "FALSE",
                                },
                                            ],
                            "description": "Determines if animals will be able to spawn." 
                },
                {
                    "name": "SPAWN_NPC",
                    "label": "SPAWN_NPC",
                    "select": [
                        {
                           "text": "TRUE",
                                   "value": "TRUE",
                                   "defaullt": "TRUE"
                               },
                               {
                                   "text": "FALSE",
                                   "value": "FALSE",
                               },
                                           ],
                           "description": "Determines if villagers will be spawned." 
               },
                {
                    "name": "SPAWN_MONSTERS",
                    "label": "SPAWN_ANIMALS",
                    "select": [
                        {
                            "text": "TRUE",
                            "value": "TRUE",
                            "defaullt": "TRUE"
                        },
                        {
                            "text": "FALSE",
                            "value": "FALSE",
                        },
                                ],
                            "description": "Determines if monsters will be spawned." 
                        },
				{
					"name": "CONFIGFILE",
					"label": "CONFIGFILE",
					"default": "/config/adguardhome-sync.yaml",
					"description": "Set a custom config file."
				}
			],
			"ports": [
				"25565:25565/tcp"
			],
			"volumes": [
			{
				"container": "/data",
				"bind": "/opt/minecraft/paper/datag"
			}
			],
			"restart_policy": "unless-stopped"
		},
